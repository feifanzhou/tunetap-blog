<a href='<%= post.path_with_slug %>'>
  <li>
    <div class='SearchResultThumbnail left'>
      <%= image_tag post.image_url, size: '50x50' %>
    </div>
    <div class='SearchResultContent left'>
      <p class='SearchResultTitle'><%= post.title_text %></p>
      <p class='SearchResultBody'><%= post.body_text[0..80] %>&hellip;</p>
    </div>
  </li>
</a>